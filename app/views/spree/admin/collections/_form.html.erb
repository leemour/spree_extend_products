<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Spree::Collection)), spree.admin_collections_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for [:admin, resource] do |f| %>
  <div class="row" data-hook="admin_collection_form_fields">
    <div class="col-md-6" data-hook="admin_collection_form_left">
      <div class="form-group">
        <%= f.label :name %> <span class="required">*</span>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      </div>

      <div class="form-group">
        <%= f.label :permalink %> <span class="required">*</span>
        <%= f.text_field :permalink, class: 'form-control' %>
        <%= f.error_message_on :permalink %>
      </div>
    </div>

    <div class="col-md-6" data-hook="admin_collection_form_right">
      <div class="form-group">
        <%= f.label :kind %>
        <%= f.select :kind, Spree::Collection.kinds_for_select, {}, class: 'select2' %>
      </div>
    </div>
  </div>

  <div class="row" data-hook="admin_collection_form_meta">
  </div>

  <div class="row" data-hook="admin_collection_form_additional_fields">
    <div class="col-md-12"></div>
  </div>

  <%= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>
