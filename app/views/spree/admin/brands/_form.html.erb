<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Spree::Author)), spree.admin_brands_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for [:admin, resource] do |f| %>
  <div class="row" data-hook="admin_brand_form_fields">
    <div class="col-md-6" data-hook="admin_brand_form_left">
      <div class="form-group">
        <%= f.label :name %> <span class="required">*</span>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      </div>

      <div class="form-group">
        <%= f.label :permalink %> <span class="required">*</span>
        <%= f.text_field :permalink, class: 'form-control' %>
        <%= f.error_message_on :permalink %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, rows: 12, class: 'form-control' %>
        <%= f.error_message_on :description %>
      </div>
    </div>

    <div class="col-md-6" data-hook="admin_brand_form_right">
      <div class="form-group">
        <%= f.label :logo %>
        <%= f.file_field :logo, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :country_id %>
        <%= f.select :country_id, Spree::Country.order('name ASC').to_options(:name), {}, class: 'select2' %>
      </div>

      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status, Spree::Author.statuses_for_select, {}, class: 'select2' %>
      </div>
    </div>
  </div>

  <div class="row" data-hook="admin_brand_form_meta">
    <div class="col-md-12">
      <div class="form-group">
        <%= f.label :meta_title %>
        <%= f.text_field :meta_title, class: 'form-control' %>
        <%= f.error_message_on :meta_title %>
      </div>

      <div class="form-group">
        <%= f.label :meta_keywords %>
        <%= f.text_field :meta_keywords, class: 'form-control' %>
        <%= f.error_message_on :meta_keywords %>
      </div>

      <div class="form-group">
        <%= f.label :meta_description %>
        <%= f.text_field :meta_description, class: 'form-control' %>
        <%= f.error_message_on :meta_description %>
      </div>
    </div>
  </div>

  <div class="row" data-hook="admin_brand_form_additional_fields">
    <div class="col-md-12"></div>
  </div>

  <%= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>
